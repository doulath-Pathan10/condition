if (event.target.checked === true) {
    if (toggle) {  // Ensure toggle is defined
        toggle.style.opacity = "0.5";
        toggleText.style.color = "#8F8F8F";
        toggleText.style.letterSpacing = "-0.9px";
    }
    nextfield.disabled = true;
} else {
    if (toggle) {
        toggle.style.opacity = "1";  // Reset opacity
    }
    nextfield.disabled = false;
}




beforeEach(() => {
    document.body.innerHTML = `
        <input id="marketing_phone_all" type="checkbox" />
        <input id="marketing_phone_others" type="checkbox" />
        <div id="toggle"></div>
    `;

    jest.spyOn(document, 'querySelector').mockImplementation((selector) => {
        if (selector === '#toggle') {
            return document.getElementById('toggle');
        }
        return null;
    });
});






test('marketing_phone_all disables marketing_phone_others when checked', () => {
    const phoneAllInput = screen.getByLabelText('marketing_phone_all');
    fireEvent.click(phoneAllInput);

    const toggleElement = document.getElementById('toggle');
    expect(toggleElement.style.opacity).toBe('0.5');
});
